<form>
<div class="row">
  <div class= "col-sm-6 col-sm-offset-3">
    <h1 class="main-color">Update Profile</h1><br>
  
    <div class="form-group">
      <%= label :first_name, "First Name *" %>
      <%= text_field :first_name, class: 'form-control', placeholder: "Name" %>
    </div>

    <div class="form-group">
      <%= label :last_name, "Last Name *" %>
      <%= text_field :last_name, class: 'form-control', placeholder: "Name" %>
    </div>    

    <div class="form-group">
      <%= label :email, "Email *" %>
      <%= text_field :email, placeholder: "Email" %>
    </div>


    <div class="form-group">
      <%= label :image, "Profile Picture" %>
      <%= file_field :image, placeholder: "Image" %>
    </div>

    
    <div class="form-group">
    <input type="submit" form="form1" value="Submit" >
    </div>
  </div>
</div>
</form>
